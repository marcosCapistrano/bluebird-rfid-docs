<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 -->
    <solid android:color="#FFFFFF" /> <!-- 흰 배경 -->

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- 연회색 테두리 -->

    <!-- 모서리 둥글게 -->
    <corners android:radius="12dp" />

    <!-- 내부 여백이 필요하면 패딩도 가능 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>